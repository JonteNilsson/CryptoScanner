@page
@model CryptoScanner.UI.Pages.CurrencyDetailModel
@{
}


<h1>Details</h1>
<hr style="width: 25%" />
<br />
@if (Model.Exchange != null)
{
	<div>
		<img src="@Model.Exchange.Image" />
		<h1>Currency name: @Model.Exchange.Name</h1>
		<h4>Year established: @Model.Exchange.YearEstablished</h4>
		<h4>Country: @Model.Exchange.Country</h4>
		<h4>Description: @Model.Exchange.Description</h4>
		<h4>Url: @Model.Exchange.Url</h4>
		<h4>Trading incentive: @Model.Exchange.HasTradingIncentive</h4>
		<h4>Trust score: @Model.Exchange.TrustScore</h4>
		<h4>Trust score rank: @Model.Exchange.TrustScoreRank</h4>
		<h4>Trade volume: @Model.Exchange.TradeVolume24hBtc</h4>
		<h4>Trade volume normalized: @Model.Exchange.TradeVolume24hBtcNormalized</h4>
		@if(Model.Value == null)
		{
			<h3>Worth: cant be found</h3>
		}
		else
		{
		<h3>Worth: @Model.Value.Sek</h3>	
		}
	</div>
}
else
{
	<h1>Currency cant be found</h1>
}
