@page
@model IndexModel
@{
    ViewData["Home"] = "Home page";
}

<h1>Welcome to CryptoScanner!</h1>
<hr />
<div>
    <h2>Crypto-currencies</h2>
    <hr style="width: 20%; margin: 5px 0 5px 0;" />
    <br />
    @foreach(var exchange in Model._Exchanges!)
    {
        if (exchange != null)
        {
            <a asp-page="/CurrencyDetail" asp-route-exchangeName="@exchange.Name">
                <h3>@exchange.Name</h3>
            </a>
        }
    }
</div>

